<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<servlet>
		<servlet-name>WelcomeServlet</servlet-name>
		<servlet-class>hu.csega.virtual.space.WelcomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WelcomeServlet</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SendContentServlet</servlet-name>
		<servlet-class>hu.csega.virtual.space.SendContentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SendContentServlet</servlet-name>
		<url-pattern>/sendContent</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ReadContentServlet</servlet-name>
		<servlet-class>hu.csega.virtual.space.ReadContentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ReadContentServlet</servlet-name>
		<url-pattern>/readContent</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ShowServlet</servlet-name>
		<servlet-class>hu.csega.virtual.space.ShowServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowServlet</servlet-name>
		<url-pattern>/show/*</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>welcome</welcome-file>
	</welcome-file-list>
</web-app>
